<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ankit.learning.InviteFriendsActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/invite_friends_toolbar"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/invite_friends_toolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/invitefriends" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="@string/learning_is_more_fun_with_friends" />

    <Button
        android:id="@+id/invite_friends_facebook_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31dp"
        android:text="FACEBOOK"
        android:textColor="@android:color/white"
        android:backgroundTint="#3b5998"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:id="@+id/invite_friends_whatsapp_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/invite_friends_facebook_btn"
        android:layout_marginBottom="12dp"
        android:text="WHATSAPP"
        android:textColor="@android:color/white"
        android:backgroundTint="#34af23"
        android:layout_alignEnd="@+id/invite_friends_facebook_btn"
        android:layout_alignStart="@+id/invite_friends_facebook_btn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:textSize="15sp"
        android:text="TAKE IT EASY-->>" />


</RelativeLayout>
